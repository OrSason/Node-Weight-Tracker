
  
  pipeline {  environment {
    registry = "ors09/wtapp"
    registryCredential = 'dockerAc'
    dockerImage = ''
    
    OKTA_ORG_URL = "dev-27447572.okta.com"
    OKTA_CLIENT_ID = "0oajukwgnoJ7glcBg5d6"
    
    withCredentials([string(credentialsId: 'oktaSecret', variable: 'okta')]) { 
        OKTA_CLIENT_SECRET = '${okta}'
    }
    
  } 
  
  agent {label 'slave'}
  
  stages {
  
  stage('Confiuration') {
      steps{    
        sh "chmod +x -R ${env.WORKSPACE}"
        sh('sudo ./configEnv.sh ${OKTA_ORG_URL} ${OKTA_CLIENT_ID} ${OKTA_CLIENT_SECRET}')
      }
    }
  

    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":latest"
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
    stage('Remove Unused docker image') {
      steps{
        sh "docker rmi $registry:latest"
      }
    }
  }
}

